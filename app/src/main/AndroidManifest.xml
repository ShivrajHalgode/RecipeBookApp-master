<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipebook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/eggs_in_a_skillet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/eggs_in_a_skillet_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeBook">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewRecipeScreen"></activity>
        <activity android:name=".AddRecipeScreen"></activity>
    </application>

</manifest>
